<!-- SHAPE ================================================== -->
<div class="position-relative">
  <div class="shape shape-bottom shape-fluid-x svg-shim text-gray-200">
    <%= render_landkit_svg 'img/shapes/curves/curve-1.svg' %>
  </div>
</div>

<footer class="py-8 py-md-11 <%= local_assigns[:class_list] %>">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4 col-lg-3">

        <!-- Brand -->
        <%= image_pack_tag 'media/images/logo.svg', width: "181 px", class: "footer-brand img-fluid mb-2", alt: "..."%>

        <!-- Text -->
        <p class="text-gray-700 mb-2">
          A better way to build.
        </p>

        <!-- Social -->
        <ul class="list-unstyled list-inline list-social mb-6 mb-md-0">
          <li class="list-inline-item list-social-item mr-3">
            <a href="https://www.linkedin.com/company/worklark" class="text-decoration-none" target="_blank">
              <i data-feather="linkedin" class="list-social-icon"></i>
            </a>
          </li>
          <li class="list-inline-item list-social-item mr-3">
            <a href="https://www.facebook.com/worklark" class="text-decoration-none" target="_blank">
              <i data-feather="facebook" class="list-social-icon"></i>
            </a>
          </li>
          <li class="list-inline-item list-social-item mr-3">
            <a href="https://twitter.com/WorkLarkHQ" class="text-decoration-none" target="_blank">
              <i data-feather="twitter" class="list-social-icon"></i>
            </a>
          </li>
        </ul>

      </div>

      <div class="col-6 col-md-4 col-lg-2 offset-lg-4">

        <!-- Heading -->
        <h6 class="font-weight-bold text-uppercase text-gray-700">
          Navigation
        </h6>

        <!-- List -->
        <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0">
          <li class="mb-3">
            <a href="<%= pricing_path %>" class="text-reset">
              Pricing
            </a>
          </li>
          <li class="mb-3">
            <a href="<%= about_path %>" class="text-reset">
              About
            </a>
          </li>
          <li class="mb-3">
            <a href="<%= support_path %>" class="text-reset">
              Support
            </a>
          </li>
        </ul>

      </div>
      <div class="col-6 col-md-4 col-lg-2">

        <!-- Heading -->
        <h6 class="font-weight-bold text-uppercase text-gray-700">
          Legal
        </h6>

        <!-- List -->
        <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0">
          <li class="mb-3">
            <a href="<%= terms_of_service_path %>" class="text-reset">
              Terms of service
            </a>
          </li>
          <li class="mb-3">
            <a href="<%= privacy_policy_path %>" class="text-reset">
              Privacy policy
            </a>
        </ul>

      </div>
    </div>
    <!-- / .row -->
    <div class="row">
      <div class="col-12 col-md-4 col-lg-3">
        <!-- Copyright -->
        <p class="text-muted mb-6 mb-md-8 mb-lg-0">
          &copy; WorkLark.com 2019
        </p>
      </div>
    </div>
    <!-- / .row -->
  </div>
  <!-- / .container -->
</footer>
