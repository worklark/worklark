                <i class="fe fe-check"></i>
              </div>

              <!-- Text -->
              <p>
                Private notes
              </p>

            </div>
            <div class="d-flex">

              <!-- Badge -->
              <div class="badge badge-rounded-circle badge-success-soft mt-1 mr-4">
                <i class="fe fe-check"></i>
              </div>

              <!-- Text -->
              <p class="mb-5">
                Email support
              </p>

            </div>

            <!-- Button -->
            <a href="<%= root_path %>#apply-for-invite" class="btn btn-block btn-primary">
