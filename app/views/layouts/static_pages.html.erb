<!DOCTYPE html>
<html>
  <head>
    <% if yield(:head).blank? %>
      <title>Recruitment software | WorkLark</title>
    <% else %>
      <%= yield :head %>
    <% end %>
    <%= render partial: 'shared/google_analytics' if Rails.env.production? %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= render 'application/favicon' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'static_pages', media: 'all' %>
  </head>

  <body>
    <!-- MODALS ================================================== -->
    <%# render partial: 'static_pages/shared/modals' # we don't need these right now %>

    <!-- NAVBAR ================================================== -->
    <%= render partial: 'static_pages/shared/navbar', locals: { class_list: "navbar-light bg-white", type: "boxed" } %>
    <!-- Alerts -->
    <%= render partial: 'shared/flash_messages' %>

    <!-- WELCOME ================================================== -->

    <%= yield %>

    <!-- FOOTER ================================================== -->
    <%= render partial: 'static_pages/shared/footer', locals: { class_list: "bg-gray-200" } %>

    <%= javascript_pack_tag 'static_pages' %>
    <%= console if Rails.env.development? && params[:console] == "true" %>
  </body>
</html>
