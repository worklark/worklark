<!DOCTYPE html>
<html>
  <head>
    <% if yield(:head).blank? %>
      <title>Dashboard | WorkLark</title>
    <% else %>
      <%= yield :head %>
    <% end %>
    <%= render partial: 'shared/google_analytics' if Rails.env.production? %>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= render 'application/favicon' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'dashboard', media: 'all' %>
  </head>

  <body>
    <!-- MODALS
    ================================================== -->
    <%# render partial: "dashboard/sharedmodals.html" %>

    <!-- NAVIGATION
    ================================================== -->
    <%= render partial: 'dashboard/shared/topnav', locals: {
      category: "dashboards",
      subcategory: "",
      page: "index.html"
    } %>

    <!-- Alerts -->
    <%= render partial: 'shared/flash_messages' %>

    <!-- WELCOME ================================================== -->

    <%= yield %>

    <!-- FOOTER ================================================== -->
    <%#= render partial: 'dashboard/shared/footer', locals: { class_list: "bg-gray-200" } %>

    <%= javascript_pack_tag 'dashboard' %>
    <%= console if Rails.env.development? && params[:console] == "true" %>
  </body>
</html>
